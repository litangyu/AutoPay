<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="16dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/alipay"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?attr/colorAccent"/>

        <TextView
            android:id="@+id/tv_alipay_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:text="@string/client_status"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_said"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_said"
            android:singleLine="true"
            tools:text="100007"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_alipay_sub_assembly"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/open_sub_assembly"/>

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/et_qrcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_qrcode"
            android:singleLine="true"
            android:text="@string/test_qrcode"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_alipay_transfer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/open_transfer"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_alipay_barcode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/open_pay_barcode"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_alipay_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/open_scan_qrcode"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp"
            android:text="@string/wechat"
            android:textAppearance="@style/TextAppearance.AppCompat.Button"
            android:textColor="?attr/colorAccent"/>

        <TextView
            android:id="@+id/tv_wechat_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            tools:text="@string/client_status"/>

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_wechat_scanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="@string/open_scan_qrcode"/>

        <!--<android.support.v7.widget.AppCompatButton-->
            <!--android:id="@+id/btn_open_pay_barcode"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="8dp"-->
            <!--android:layout_marginBottom="8dp"-->
            <!--android:text="@string/open_pay_barcode"/>-->

    </LinearLayout>
</ScrollView>